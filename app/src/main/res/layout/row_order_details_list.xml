<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltOrderItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="@string/layout_direction"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/rltOrderDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="@dimen/margin_normal">

        <com.obs.CustomTextView
            android:id="@+id/tvOrderCount"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/ic_closer"
            android:drawablePadding="-3dp"
            android:text="1"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_normal" />

        <com.obs.CustomTextView
            android:id="@+id/tvOrderItem"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/tvOrderPrice"
            android:layout_toEndOf="@+id/tvOrderCount"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Spicy Fries"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_normal" />

        <com.obs.CustomTextView
            android:id="@+id/tvOrderPrice"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="$100"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltExtralayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="55dp">

        <com.obs.CustomTextView
            android:id="@+id/tvExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Extra "
            android:textColor="@color/apptheme"
            android:textSize="@dimen/text_medium"
            android:textStyle="italic"
            android:visibility="visible" />

    </RelativeLayout>


    <com.obs.CustomTextView
        android:id="@+id/tvAddonsTitle"
        style="@style/ClanProForUBER_News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="55dp"
        android:layout_marginTop="@dimen/text_xsmall"
        android:text="@string/addon"
        android:textColor="@color/app_text_black3"
        android:textSize="@dimen/text_medium" />

    <com.obs.CustomTextView
        android:id="@+id/tvaddons"
        style="@style/ClanProForUBER_News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="55dp"
        android:text="@string/addon"
        android:textColor="@color/app_text_black3"
        android:textSize="@dimen/text_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rltTime"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/shadow_other_header" />
</LinearLayout>
