<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rltOrderItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="@string/layout_direction"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_normal"
    app:background="@color/white">

    <LinearLayout
        android:id="@+id/lltOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_normal"
        android:orientation="vertical">

        <com.obs.CustomTextView
            android:id="@+id/tvOrderId"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1234"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_normal" />

        <com.obs.CustomTextView
            android:id="@+id/tvOrderName"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_small"
            android:maxWidth="150dp"
            android:text="Burgers &amp; BBQ"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_medium" />

        <com.obs.CustomTextView
            android:id="@+id/tvOrderItem"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_small"
            android:text="1 item for Siva"
            android:textColor="@color/app_text_black4"
            android:textSize="@dimen/text_medium"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rltTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewStart"
        android:layout_marginEnd="@dimen/margin_normal"
        android:orientation="vertical"
        android:layoutDirection="ltr">

        <com.obs.CustomTextView
            android:id="@+id/tvTime"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="$123"
            android:textAlignment="center"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_normal" />

        <com.obs.CustomTextView
            android:id="@+id/tvDate"
            style="@style/ClanProForUBER_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="10/5/18 11:45 AM"
            android:textAlignment="center"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_medium" />

        <com.obs.CustomTextView
            android:id="@+id/tvOrderStatus"
            style="@style/ClanProForUBER_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/app_text_black3"
            android:textSize="@dimen/text_normal" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/lltOrder"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadow_other_header" />
</RelativeLayout>
