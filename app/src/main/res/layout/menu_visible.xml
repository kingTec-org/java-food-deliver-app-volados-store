<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="@string/layout_direction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rltAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_lsmall">

            <com.obs.CustomTextView
                style="@style/ClanProForUBER_News"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@string/available"
                android:textAllCaps="false"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/text_large" />

            <ImageView
                android:id="@+id/ivAvailableTick"
                android:layout_width="@dimen/margin_normal"
                android:layout_height="@dimen/margin_normal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/right"
                android:tint="@color/apptheme"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/app_text_black5" />

        <RelativeLayout
            android:id="@+id/rltUnavailableToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_lsmall">

            <com.obs.CustomTextView
                style="@style/ClanProForUBER_News"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@string/unavailable_today"
                android:textAllCaps="false"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/text_large" />

            <ImageView
                android:id="@+id/ivUnavailableTodayTick"
                android:layout_width="@dimen/margin_normal"
                android:layout_height="@dimen/margin_normal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/right"
                android:tint="@color/apptheme"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/app_text_black5" />

        <RelativeLayout
            android:id="@+id/rltUnavailableIndefinite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_lsmall"
            android:visibility="gone">

            <com.obs.CustomTextView
                style="@style/ClanProForUBER_News"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@string/unavailable_indefinitely"
                android:textAllCaps="false"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/text_large" />

            <ImageView
                android:id="@+id/ivUnavailableIndefiniteTick"
                android:layout_width="@dimen/margin_normal"
                android:layout_height="@dimen/margin_normal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/right"
                android:tint="@color/apptheme"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>